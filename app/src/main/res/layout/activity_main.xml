<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_margin="40dp"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/txtNumber1"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Input number 1"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:contentDescription="Input field for the first number" /> <!-- Added content description -->

        <EditText
            android:id="@+id/txtNumber2"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:hint="Input number 2"
            android:inputType="number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:contentDescription="Input field for the second number" /> <!-- Added content description -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20sp"
                android:onClick="handlePlusButton"
                android:layout_marginEnd="16dp"
                android:contentDescription="Add numbers" /> <!-- Added content description -->

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"
                android:onClick="handleMinusButton"
                android:contentDescription="Subtract numbers" /> <!-- Added content description -->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>